{
  "name": "mtml",
  "displayName": "Movable Type Markup Language",
  "description": "Provides MTML (Movable Type Markup Language) syntax highlight and snippets for Visual Studio Code",
  "version": "0.2.2",
  "engines": {
    "vscode": "^1.67.0"
  },
  "publisher": "hiromasa.fujimori",
  "icon": "images/icon.png",
  "license": "MIT",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/fhiromasa/vscode-ext-movabletype"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "movable type",
    "mtml"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mtml",
        "aliases": [
          "Movable Type Markup Language",
          "mtml"
        ],
        "extensions": [
          ".mtml"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light":"./images/light.png",
          "dark": "./images/dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "mtml",
        "scopeName": "source.mtml",
        "path": "./syntaxes/mtml.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "mtml",
        "path": "./snippets/snippets.jsonc"
      }
    ]
  },
  "scripts": {
    "release":"npx vsce package"
  }
}
