{
  "name": "mtml-language-provider",
  "displayName": "MTML",
  "description": "Provides MTML (Movable Type Markup Language) syntax highlight and snippets for Visual Studio Code",
  "version": "0.2.6",
  "engines": {
    "vscode": "^1.67.0"
  },
  "publisher": "fhiromasa",
  "icon": "images/icon.png",
  "license": "MIT",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/fhiromasa/mtml-language-provider"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "movable type",
    "mtml"
  ],
  "contributes": {
    "languages": [
      {
        "id": "devmtml",
        "aliases": [
          "MTML",
          "mtml"
        ],
        "extensions": [
          ".devmtml"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light":"./images/light.png",
          "dark": "./images/dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "devmtml",
        "scopeName": "source.devmtml",
        "path": "./syntaxes/mtml.tmGrammar.json"
      },
      {
        "injectTo": [
          "source.devmtml"
        ],
        "scopeName": "source.devmtml.embedded",
        "path": "./syntaxes/mtml.embedded.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "mtml",
        "path": "./snippets/snippets.jsonc"
      }
    ]
  }
}
