{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Movable Type Markup Language",
  "firstLineMatch": "<\\$?[Mm][Tt]",
  "keyEquivalent": "^~M",
  "patterns": [
    {"include": "#mt-ignore-tag"},
    {"include": "#mt-tags"},
    {"include": "#pseudo-html"},
    {"include": "#embedded-code"},
    {"include": "#character-entity-references"}
  ],
  "repository": {
    "mt-tags":{
      "patterns": [
        {"include": "#mt-trans-tag"},
        {"include": "#mt-block-tag"},
        {"include": "#mt-function-tag"}
      ]
    },
    "pseudo-html": {
      "patterns": [
        {"include": "#html-comment"},
        {"include": "#html-doctype"},
        {"include": "#html-tag"}
      ]
    },
    "embedded-code": {
      "patterns": [
        {"include": "#php"},
        {"include": "#ruby"}
      ]
    },
    "character-entity-references": {
      "patterns": [
        {
          "captures": {
            "1": {"name": "punctuation.definition.constant.html"},
            "3": {"name": "punctuation.definition.constant.html"}
          },
          "match": "(&)([a-zA-Z0-9]+|#[0-9]+|#x[0-9a-fA-F]+)(;)",
          "name": "constant.character.entity.html"
        },
        {
          "match": "&",
          "name": "invalid.illegal.bad-ampersand.html"
        }
      ]
    },
    "mt-block-tag": {
      "patterns": [
        {
          "begin": "(</?[Mm][Tt]:?)((\\w+:)?\\w+)",
          "beginCaptures": {
            "1": {"name": "punctuation.definition.tag.mt"},
            "2": {
              "name": "entity.other.inherited-class.mt",
              "patterns": [
                {
                  "match": "\\b([iI][fF]\\w*|[eE][lL][sS][eE]([iI][fF])?|[lL][oO][oO][pP]|[Ff][Oo][Rr]([eE][aA][cC][hH])?)\\b",
                  "name": "keyword.control.mt"
                }
              ]
            }
          },
          "end": "/?>",
          "endCaptures": {
            "0": {"name": "punctuation.definition.tag.mt"}
          },
          "name": "entity.name.tag.container.mt",
          "patterns": [
            {"include": "#mt-tag-stuff"}
          ]
        }
      ]
    },
    "mt-function-tag": {
      "patterns": [
        {
          "begin": "(<)(\\$[Mm][Tt]:?(\\w+:)?\\w+)",
          "beginCaptures": {
            "1": {"name": "punctuation.definition.tag.mt"},
            "2": {"name": "entity.other.inherited-class.mt"}
          },
          "end": "(\\$?)(>)",
          "endCaptures": {
            "1": {"name": "entity.other.inherited-class.mt"},
            "2": {"name": "punctuation.definition.tag.mt"}
          },
          "name": "entity.name.tag.function.mt",
          "patterns": [
            {"include": "#mt-tag-stuff"}
          ]
        }
      ]
    },
    "mt-ignore-tag": {
      "begin": "<[Mm][Tt]:?[Ii]gnore>",
      "beginCaptures": {
        "0": {"name": "punctuation.definition.comment.mt"}
      },
      "end": "</[Mm][Tt]:?[Ii]gnore>",
      "endCaptures": {
        "0": {"name": "punctuation.definition.comment.mt"}
      },
      "name": "comment.block.mt"
    },
    "string-double-quoted": {
      "begin": "\"",
      "beginCaptures": {
        "0": {"name": "punctuation.definition.string.begin.html"}
      },
      "end": "\"",
      "endCaptures": {
        "0": {"name": "punctuation.definition.string.end.html"}
      },
      "name": "string.quoted.double.html",
      "patterns": [
        {"include": "#mt-tags"},
        {"include": "#embedded-code"},
        {"include": "#character-entity-references"}
      ]
    },
    "string-single-quoted": {
      "begin": "'",
      "beginCaptures": {
        "0": {"name": "punctuation.definition.string.begin.html"}
      },
      "end": "'",
      "endCaptures": {
        "0": {"name": "punctuation.definition.string.end.html"}
      },
      "name": "string.quoted.single.html",
      "patterns": [
        {"include": "#mt-tags"},
        {"include": "#embedded-code"},
        {"include": "#character-entity-references"}
      ]
    },
    "symbol":{
      "match": "(=|,)",
      "name":"keyword.operator"
    },
    "mt-modifiers": {
      "match": "\\b([a-zA-Z-_:]+)",
      "name": "constant.numeric"
    },
    "replace-modifiers":{
      "match": "\\b(regex_replace|replace)(=)(\".*\"|'.*')(,)",
      "captures":{ 
        "1":{"name":"constant.numeric"},
        "2":{"patterns": [{"include": "#symbol"}]},
        "3":{"name":"string.regexp"},
        "4":{"patterns": [{"include": "#symbol"}]}
      }
    },
    "mt-tag-stuff": {
      "patterns": [
        {"include": "#mt-trans-tag"},
        {"include": "#replace-modifiers"},
        {"include": "#mt-modifiers"},
        {"include": "#string-double-quoted"},
        {"include": "#string-single-quoted"},
        {"include": "#symbol"}
      ]
    },
    "html-attributes": {
      "match": "\\b([a-zA-Z-_]+)",
      "name": "entity.other.attribute-name.html"
    },
    "html-tag-stuff": {
      "patterns": [
        {"include": "#html-attributes"},
        {"include": "#string-double-quoted"},
        {"include": "#string-single-quoted"},
        {"include": "#mt-tags"}
      ]
    },
    "mt-trans-tag": {
      "patterns": [
        {
          "begin": "(<)(__trans)",
          "beginCaptures": {
            "1": {"name": "punctuation.definition.tag.mt"},
            "2": {"name": "entity.other.inherited-class.mt"}
          },
          "end": "(>)",
          "endCaptures": {
            "1": {"name": "punctuation.definition.tag.mt"}
          },
          "name": "meta.tag.mt.trans.html",
          "patterns": [
            {"include": "#mt-tag-stuff"}
          ]
        }
      ]
    },
    "html-comment": {
      "begin": "<!--",
      "captures": {
        "0": {"name": "punctuation.definition.comment.html"}
      },
      "end": "-->",
      "name": "comment.block.html",
      "patterns": [
        {"include": "#mt-tags"}
      ]
    },
    "html-doctype": {
      "begin": "<!(?=(?i:DOCTYPE\\s))",
      "beginCaptures": {
        "0": {"name": "punctuation.definition.tag.begin.html"}
      },
      "end": ">",
      "endCaptures": {
        "0": {"name": "punctuation.definition.tag.end.html"}
      },
      "name": "meta.tag.metadata.doctype.html",
      "patterns": [
        {
          "match": "\\G(?i:DOCTYPE)",
          "name": "entity.name.tag.html"
        },
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double.html"
        },
        {
          "match": "[^\\s>]+",
          "name": "entity.other.attribute-name.html"
        }
      ]
    },
    "html-tag": {
      "patterns": [
        {
          "begin": "(<)((?:([-_a-zA-Z0-9]+)(:))?([-_a-zA-Z0-9:]+))(?=(\\s[^>]*)?></\\2>)",
          "beginCaptures": {
            "1": {"name": "punctuation.definition.tag.xml"},
            "2": {"name": "entity.name.tag.xml"},
            "3": {"name": "entity.name.tag.namespace.xml"},
            "4": {"name": "punctuation.separator.namespace.xml"},
            "5": {"name": "entity.name.tag.localname.xml"}
          },
          "end": "(>)(</)((?:([-_a-zA-Z0-9]+)(:))?([-_a-zA-Z0-9:]+))(>)",
          "endCaptures": {
            "1": {"name": "punctuation.definition.tag.xml"},
            "2": {"name": "punctuation.definition.tag.xml"},
            "3": {"name": "entity.name.tag.xml"},
            "4": {"name": "entity.name.tag.namespace.xml"},
            "5": {"name": "punctuation.separator.namespace.xml"},
            "6": {"name": "entity.name.tag.localname.xml"},
            "7": {"name": "punctuation.definition.tag.xml"}
          },
          "name": "meta.tag.no-content.xml",
          "patterns": [
            {"include": "#html-tag-stuff"}
          ]
        },
        {
          "begin": "(</?)(?:([-\\w\\.]+)((:)))?([-\\w\\.:]+)",
          "captures": {
            "1": {"name": "punctuation.definition.tag.xml"},
            "2": {"name": "entity.name.tag.namespace.xml"},
            "3": {"name": "entity.name.tag.xml"},
            "4": {"name": "punctuation.separator.namespace.xml"},
            "5": {"name": "entity.name.tag.localname.xml"}
          },
          "end": "(/?>)",
          "name": "meta.tag.xml",
          "patterns": [
            {"include": "#html-tag-stuff"}
          ]
        }
      ]
    },
    "php": {
      "begin": "(<\\?php)",
      "end": "(\\?>)",
      "name": "entity.name.tag",
      "patterns": [
        {"include": "source.php"}
      ]
    },
    "ruby": {
      "begin": "<%+(?!>)=?",
      "captures": {
        "0": {"name": "punctuation.section.embedded.ruby"}
      },
      "end": "-?%>",
      "name": "source.ruby.embedded.html",
      "patterns": [
        {
          "captures": {
            "1": {"name": "punctuation.definition.comment.ruby"}
          },
          "match": "(#).*?(?=-?%>)",
          "name": "comment.line.number-sign.ruby"
        },
        {
          "include": "source.ruby"
        }
      ]
    }
  },
  "scopeName": "source.mtml"
}
